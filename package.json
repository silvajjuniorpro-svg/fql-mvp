{
  "name": "fql-mvp",
  "version": "0.1.0",
  "description": "FQL MVP - Lead Score offline (Windows)",
  "main": "main.js",
  "author": "Jo√£o",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.fql.mvp",
    "productName": "FQL Lead Score",
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**"
    ],
    "files": [
      "main.js",
      "preload.js",
      "app/**",
      "node_modules/**"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
